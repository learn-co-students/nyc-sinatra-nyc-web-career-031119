<h2>Edit Historical Landmark</h2>
<h4><%= @landmark.name %></h4>
<!-- add content here -->
<form class="" action="/landmarks/<%=@landmark.id%>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <br>
  <label>Name: </label>
  <input type="text" name="landmark[name]" id="landmark_name" value="<%=@landmark.name%>">
  <label>Year Completed: </label>
  <input type="number" id="submit-changes" name="landmark[year_completed]" value="<%= @landmark.year_completed %>">
  <br>
  <input type="submit" value="Save Changes">
</form>
