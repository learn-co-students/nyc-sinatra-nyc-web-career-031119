<h1>Edit This Figure</h1>
<h3><%= @figure.name %></h3>
<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <br>
  <label>Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br>
  <label>Choose an Existing Title: </label>
  <ul>
  <% @titles.each do |title| %>
    <li><input type="checkbox" name="figure[title_ids][]" id="<%= title.id %>" value="<%=title.id%>" <%= 'checked' if @figure.titles.include?(title)%>><%=title.name%></input></li>
  <% end %>
  </ul>
  <label>And/or Create a new title:</label>
  <br>
  <label>Name: </label>
  <input type="text" name="title[name]"></input>
  <br>
  <br>
  <label>Choose an Existing Landmark: </label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%=landmark.id%>" <%= 'checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input>
  <% end %>
  <input type="submit" value="Save Changes">
</form>
